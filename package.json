{
  "name": "opengl-macro-ext",
  "displayName": "opengl-macro-ext",
  "description": "This extension expands the commonly used C/C++ OpenGL macros with their documentation from the khronos.org website.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration":[
      {
        "title": "OpenGL Documentation",
        "properties": {
          "openglMacroExt.enable": {
            "type": "boolean",
            "default": true,
            "description": "Enable/Disable the extension"
          },
          "openglMacroExt.language": {
            "type": "[string]",
            "default": "[cpp, c]",
            "description": "The languages to use for the documentation"
          },
          "openglMacroExt.glVersion": {
            "type": ["es1.1", "es2.0", "es3", "es3.0", "es3.1", "gl2.1", "gl4"],
            "default": "gl4",
            "description": "The OpenGL version to use for the documentation"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "puppeteer": "^23.6.0"
  }
}
